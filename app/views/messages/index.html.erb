<!DOCTYPE html>
<html>
  <head>
    <title>ChatApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrap-all">
      <div class="wrap-side-bar">
        <div class="header-side-bar">
          <div class="username-header-side-bar">
            <a>Tom</a>
          </div>
          <div class="newchat-header-side-bar">
            <a>チャットを作成する</a>
          </div>
        </div>
        <div class="content-side-bar">
          <div class="room">
            <div class="room-name">
              <a href="#">techroom1</a>
            </div>
          </div>
          <div class="room">
            <div class="room-name">
              <a href="#">techroom2</a>
            </div>
          </div>
          <%= render "side_bar" %>
        </div>
      </div>
      <div class="wrap-main-chat">
        <div class="header-main-chat">
        </div>
        <div class="content-main-chat">
          <%= render "main_chat" %>
        </div>
        <div class="footer-main-chat">
        </div>
      </div>
    </div>
  </body>
</html>
