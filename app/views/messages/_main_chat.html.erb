      <div class="wrap-main-chat">
        <div class="header-main-chat">
          <div class="group-name">
            <%= @room.name %>
          </div>
          <div class="chat-end">
          <a href="#">チャットを終了する</a>
          </div>
        </div>
        <div class="content-main-chat">
          <%= render partial: 'message', collection: @messages %>
        </div>
        <div class="footer-main-chat">
        <%= form_with model: [@room, @message], class:'form-footer-main-chat', local: true do |f| %>
          <form class="form-footer-main-chat">
            <div class="form-input">
            <%= f.text_field :content, class:'message-text', placeholder: 'type a message' %>
              <label class="form-image">
                <span class="image-file">画像</span>
                <%= f.file_field :image, class:'hidden' %>
              </label>
            </div>
            <%= f.submit '送信', class: 'form-submit', name:'commit' %>
          <% end %>
        </div>
      </div>
